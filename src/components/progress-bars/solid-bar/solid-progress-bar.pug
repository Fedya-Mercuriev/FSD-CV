mixin solid-progress-bar(itemsList, blockClassName)
    ul(class=`${blockClassName}-list`)
        each item in itemsList
            li(class=`${blockClassName}-list__list-item`)
                div(class=`${blockClassName}-block-solid`)
                    h3(class=`${blockClassName}-block-solid__${blockClassName}-title`)=item.title
                    div(class=`${blockClassName}-block-solid__${blockClassName}-level-block`
                    data-item-level=item.level)
